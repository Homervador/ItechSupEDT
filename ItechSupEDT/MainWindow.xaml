<Window x:Class="ItechSupEDT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItechSupEDT"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top">
            <Menu>
                <MenuItem Header="_Ajouter">
                    <MenuItem Header="Matiere" />
                    <MenuItem x:Name="mi_ajout_formation" Header="Formation" Click="mi_ajout_formation_Click" />
                    <MenuItem Header="Promotion" />
                    <MenuItem Header="Eleve" />
                    <MenuItem Header="Formateur" />
                </MenuItem>
            </Menu>
        </StackPanel>
        <ContentControl x:Name="Ajout"/>

    </DockPanel>

</Window>
